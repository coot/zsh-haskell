source "$(dirname ${0})/_ghc"

MAIN_CONTEXT=":complete:cabal:"

_cabal_default_options () {
  zstyle -s ":completion:${MAIN_CONTEXT}:options:" packages-tmp-file PACKAGES_TMP_FILE
  if [[ -z ${PACKAGES_TMP_FILE} ]]; then
    zstyle ":completion:${MAIN_CONTEXT}:options:" packages-tmp-file "/tmp/zsh-haskell-cabal-packages"
  fi

  zstyle -s ":completion:${MAIN_CONTEXT}:options:" depth depth
  if [[ -z "${depth}" ]]; then
    zstyle ":completion:${MAIN_CONTEXT}:options:" depth 4
  fi
}

_cabal_subcommands=( bench build check clean configure "exec" \
                     fetch freeze get "gen-bounds" haddock help \
                     hscolour info init install list outdated repl \
                     report run sdist "test" unpack update upload \
                     "user-config" \
                   )

_cabal_commands () {
    local subcommands
    subcommands=(
      "bench:Run benchmarks"
      "build:Compile targets within the project."
      "check:Check the package for common mistakes"
      "clean:Clean the package store and remove temporary files."
      "configure:Add extra project configuration."
      "exec:Give a command access to the store."
      "fetch:Downloads packages for later installation."
      "freeze:Freeze dependencies."
      "get:Download/Extract a package's source code (repository)."
      "gen-bounds:Generate dependency bounds."
      "haddock:Build Haddock documentation."
      "help:Help about commands."
      "hscolour:Generate HsColour colourised code, in HTML format."
      "info:Display detailed information about a particular package."
      "init:Create a new .cabal package file."
      "install:Install packages."
      "list:List packages matching a search string."
      "outdated:Check for outdated dependencies."
      "repl:Open an interactive session for the given component."
      "report:Upload build reports to a remote server."
      "run:Run an executable."
      "sdist:Generate a source distribution file (.tar.gz)."
      "test:Run test-suites."
      "unpack:Download/Extract a package's source code (repository)."
      "update:Updates list of known packages."
      "upload:Uploads source packages or documentation to Hackage."
      "user-config:Display and update the user's global cabal configuration."
    )
    _describe -t subcommands 'cabal subcommands' subcommands
}

_cabal_list_files () {
  # find all cabal files, but do not descent into dist-newstyle, dist or
  # .stack-work directories
  local depth
  zstyle -s ":completion:${MAIN_CONTEXT}:options:" depth depth
  # options might not be set if using outside of completion
  [[ -z ${depth} ]] && depth=4
  find -maxdepth ${depth} \
                 -name "dist-newstyle" -prune , \
                 -name "dist" -prune , \
                 -name ".stack-work" -prune , \
                 -name ".git" -prune , \
                 -type f -name "*.cabal" \
                 2&>/dev/null
}


# find cabal file by package name
_cabal_find_package () {
  local pkgname=${1}
  local depth
  zstyle -s ":completion:${MAIN_CONTEXT}:options:" depth depth
  # options might not be set if using outside of completion
  [[ -z ${depth} ]] && depth=4
  res=$(find -maxdepth ${depth} \
                 -name "dist-newstyle" -prune , \
                 -name "dist" -prune , \
                 -name ".stack-work" -prune , \
                 -name ".git" -prune , \
                 -type f -name "${pkgname}.cabal" \
                 2&>/dev/null)
  if [[ -n $res ]]; then
    echo $res
  else
    for file in $(_cabal_list_files); do
      local name=$(grep "name:" ${file} | sed 's/^name:\s*//')
      if [[ ${name} == ${pkgname} ]]; then
        echo $file
      fi
    done
  fi
}

_cabal_list_packages () {
  # find all cabal packages
  local file
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//')
  done;
}

_cabal_list_components () {
  # find all components
  local file cmps
  for file in $(_cabal_list_files); do
    grep -s -P '^(test-suite|executable|benchmark|library)\s+\S' $file 2&>/dev/null \
      | awk '{print $2}' | sed -e 's/:/\\:/g'
    [[ $(grep -s -i "^library\s*$" ${file}) ]] \
      && grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//'
  done;
}

_cabal_list_libraries () {
  # find all components
  local file cmps
  for file in $(_cabal_list_files); do
    grep -s -P '^library\s+\S' $file | awk '{print $2}' | sed -e 's/:/\\:/g' 2&>/dev/null
    [[ $(grep -s -i "^library\s*$" ${file}) ]] \
      && grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//'
  done;
}

_cabal_component_names_in_file () {
  local file=$1
  local name=$(grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//')
  grep -s -i '^\(library\|executable\|test-suite\|benchmark\)' ${file} 2&>/dev/null \
    | sed -e "s/library\s*$/${name}/g" \
    | sed -e 's/library\s\+\(\S\)/\1/g' \
    | sed -e 's/executable\s\+//g' \
    | sed -e 's/test-suite\s\+//g' \
    | sed -e 's/benchmark\s\+//g'
}

_cabal_components_in_file () {
  local file=$1
  local name=$(grep "name:" ${file} 2>/dev/null | sed 's/^name:\s*//')
  grep -s -i '^\(library\|executable\|test-suite\|benchmark\)' ${file} 2&>/dev/null \
    | sed -e "s/library\s*$/${name}/g" \
    | sed -e 's/library\s\+\(\S\)/\1/g' \
    | sed -e 's/executable\s\+//g' \
    | sed -e 's/test-suite\s\+//g' \
    | sed -e 's/benchmark\s\+//g'
}

_cabal_components_in_file_with_prefix () {
  local file=$1
  local name=$(grep "name:" ${file} 2>/dev/null | sed 's/^name:\s*//')
  grep -s -i '^\(library\|executable\|test-suite\|benchmark\)' ${file} 2&>/dev/null \
    | sed -e "s/library\s*$/lib:${name}/g" \
    | sed -e 's/library\s\+\(\S\)/lib:\1/g' \
    | sed -e 's/executable\s\+/exe:/g' \
    | sed -e 's/test-suite\s\+/test:/g' \
    | sed -e 's/benchmark\s\+/bench:/g'
}

_cabal_libraries_in_file () {
  local file=$1
  local name=$(grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//') 2&>/dev/null
  grep -s -P '^library\s+\S' $file | awk '{print $2}' | sed -e "s/^/${name}:/"
  [[ $(grep -s -i "^library\s*$" ${file}) ]] \
    && grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//'
}

_cabal_list_all_executables () {
  # find all executable components
  local name;
  local file;
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} | sed 's/^name:\s*//')
    grep -s -i '^\(test-suite\|executable\|benchmark\)\s\+' $file 2&>/dev/null \
      | awk '{print $2}' | sed -e 's/:/\\:/g' | sed -e "s/^/${name}:/"
  done;
}

_cabal_list_executables () {
  # find all executable components
  local file
  for file in $(_cabal_list_files); do
    grep -s -i '^executable\s\+' $file 2&>/dev/null | awk '{print $2}' | sed -e 's/:/\\:/g'
  done;
}

_cabal_executables_in_file () {
  local file=$1
  grep -s -i '^executable\s\+' $file 2&>/dev/null | awk '{print $2}' | sed -e 's/:/\\:/g'
}

_cabal_list_tests () {
  # find all components
  local name;
  local file cmps;
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} | sed 's/^name:\s*//')
    grep -s -P '^test-suite\s+\S' $file 2&>/dev/null | awk '{print $2}' | sed -e "s/^/${name}:/"
  done;
}

_cabal_tests_in_file () {
  local file=$1
  local name=$(grep "name:" ${file} | sed 's/^name:\s*//');
  grep -s -P '^test-suite\s+\S' $file 2&>/dev/null | awk '{print $2}' | sed -e "s/^/${name}:/"
}

_cabal_list_benchmarks () {
  # find all benchmarks
  local file
  local name;
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} | sed 's/^name:\s*//');
    grep -s -i '^benchmark\s\+' $file 2&>/dev/null | awk '{print $2}' | sed -e "s/^/${name}:/"

  done;
}

_cabal_benchmarks_in_file () {
  local file=$1
  local name=$(grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//')
  grep -s -i '^benchmark\s\+' $file 2&>/dev/null | awk '{print $2}' | sed -e "s/^/${name}:/"
}

# completion for components
# ```
# _cabal_components_with_prefix "pkg:"
# ```
# or
# ```
# _cabal_components_with_prefix
# ```
_cabal_components_with_prefix () {
  local prefix=$1
  local -a components
  local -a pkgs
  local file name
  local libs
  local execs
  local tests
  local benches
  for file in $(_cabal_list_files); do
    libs=0
    execs=0
    tests=0
    benches=0
    name=$(grep "name:" ${file} | sed 's/^name:\s*//')
    pkgs+=("${prefix}${name}");
    for component in $(_cabal_components_in_file_with_prefix $file); do
      [[ ${component} =~ '^lib:' ]] && (( libs=${libs} + 1 ));
      [[ ${component} =~ '^test:' ]] && (( tests=${tests} + 1 ));
      [[ ${component} =~ '^exec:' ]] && (( execs=${execs} + 1 ));
      [[ ${component} =~ '^benches:' ]] && (( benches=${benches} + 1 ));
    done
    [[ ${libs}    > 1 ]] && pkgs+=("${prefix}${name}:libs");
    [[ ${tests}   > 1 ]] && pkgs+=("${prefix}${name}:tests");
    [[ ${execs}   > 1 ]] && pkgs+=("${prefix}${name}:execs");
    [[ ${benches} > 1 ]] && pkgs+=("${prefix}${name}:benches");
  done 
  # multi part inserts final ':' in pakcage names
  # _multi_parts ":" pkgs
  _arguments "*:pkgspecs:(${pkgs})"
}

# completion for `package-name:(libs|tests|benches|exes)` and
# `package-name:(lib:test:bench:exe):component-name`
_cabal_components () {
  local -a components
  local -a pkgs
  local file name
  local libs
  local execs
  local tests
  local benches
  for file in $(_cabal_list_files); do
    libs=0
    execs=0
    tests=0
    benches=0
    name=$(grep "name:" ${file} | sed 's/^name:\s*//')
    pkgs+=("${name}")
    for component_with_prefix in $(_cabal_components_in_file_with_prefix $file); do
      local component=${component_with_prefix/*:/};
      [[ ${component_with_prefix} =~ '^lib:'     ]] && (( libs=${libs} + 1 ));
      [[ ${component_with_prefix} =~ '^test:'    ]] && (( tests=${tests} + 1 ));
      [[ ${component_with_prefix} =~ '^exec:'    ]] && (( execs=${execs} + 1 ));
      [[ ${component_with_prefix} =~ '^benches:' ]] && (( benches=${benches} + 1 ));
      pkgs+=("${name}:${component}");
    done
    [[ ${libs}    > 1 ]] && pkgs+=("${name}:libs");
    [[ ${tests}   > 1 ]] && pkgs+=("${name}:tests");
    [[ ${execs}   > 1 ]] && pkgs+=("${name}:execs");
    [[ ${benches} > 1 ]] && pkgs+=("${name}:benches");
  done 
  # multi part inserts final ':' in pakcage names
  # it also does not allow to complete names with the same prefix as in
  # `aaa:bbb` and `aaa-ccc:bbb`, after `aaa -<tab>-> aaa:` not giving a choice
  # for `aaa-ccc:bbb`)
  # _multi_parts ":" pkgs
  _arguments "*:components:(${pkgs})"
}

_cabal_components_in_package () {
  local pkgname=${1}
  local name;
  local pkgs;
  local libs=0
  local execs=0
  local tests=0
  local benches=0
  local file=$(_cabal_find_package ${pkgname})
  name=$(grep "name:" ${file} | sed 's/^name:\s*//')
  if [[ ${name} == ${pkgname} ]]; then
    for component_with_prefix in $(_cabal_components_in_file_with_prefix ${file}); do
      local component=${component_with_prefix/*:/}
      [[ ${component_with_prefix} =~ '^lib:'   ]] && (( libs=${libs} + 1 ));
      [[ ${component_with_prefix} =~ '^test:'  ]] && (( tests=${tests} + 1 ));
      [[ ${component_with_prefix} =~ '^exe:'   ]] && (( execs=${execs} + 1 ));
      [[ ${component_with_prefix} =~ '^bench:' ]] && (( benches=${benches} + 1 ));
      pkgs+=("${name}:${component}");
    done
    [[ ${libs}    > 1 ]] && pkgs+=("${name}:libs");
    [[ ${tests}   > 1 ]] && pkgs+=("${name}:tests");
    [[ ${execs}   > 1 ]] && pkgs+=("${name}:execs");
    [[ ${benches} > 1 ]] && pkgs+=("${name}:benches");
  fi
  _arguments "*:components:(${pkgs})"
}

# test-suites, benchmarks and executables
_cabal_all_executables () {
  local -a components
  components=( $(_cabal_list_all_executables) )
  _arguments "*:components:(${components})" \
             ${_cabal_build_options[@]}
}

# only executable components
_cabal_executables () {
  local -a components
  components=( $(_cabal_list_executables) )
  _arguments "*:components:(${components})" \
             ${_cabal_build_options[@]}
}

_cabal_tests () {
  local -a components
  components=( $(_cabal_list_tests) )
  _arguments "*:components:(${components})" \
             ${_cabal_build_options[@]}
}

_cabal_benchmarks () {
  local -a components
  components=( $(_cabal_list_benchmarks) )
  _arguments "*:components:(${components})" \
             ${_cabal_build_options[@]}
}

_cabal_packages () {
  local -a pkgs
  pkgs=( $(_cabal_list_packages ) )
  _describe -t pkgs 'packages' pkgs
}

# completion for `pkg:package-name:(libs|tests|benches|exes)` and
# `pkg:package-name:(lib:test:bench:exe):component-name`
_cabal_pkgspecs () {
  _cabal_components_with_prefix "pkg:"
}

_cabal_executable_pkgspecs () {
  local -a pkgs
  local file name
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} | sed 's/^name:\s*//')
    [[ $(grep -s -i -P '^test-suite' ${file} 2&>/dev/null) ]] && pkgs+=("pkg:${name}:tests")
    [[ $(grep -s -i -P '^benchmark'  ${file} 2&>/dev/null) ]] && pkgs+=("pkg:${name}:benches")
    [[ $(grep -s -i -P '^executable' ${file} 2&>/dev/null) ]] && pkgs+=("pkg:${name}:exes")
  done 
  _multi_parts -i ":" pkgs
}

_cabal_tests_pkgspecs () {
  local -a pkgs
  local file name
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//')
    [[ $(grep -s -i -P '^test-suite' ${file} 2&>/dev/null) ]] && pkgs+=("pkg:${name}:tests")
  done 
  _multi_parts -i ":" pkgs
}

_cabal_benchmark_pkgspecs () {
  local -a pkgs
  local file name
  for file in $(_cabal_list_files); do
    name=$(grep "name:" ${file} 2&>/dev/null | sed 's/^name:\s*//')
    [[ $(grep -s -i -P '^benchmark'  ${file} 2&>/dev/null) ]] && pkgs+=("pkg:${name}:benches")
  done 
  _multi_parts -i ":" pkgs
}

# `lib:` pkgspecs
_cabal_pkgspecs_lib () {
  local -a pkgs
  local cmp name
  for cmp in $(_cabal_list_libraries); do
    pkgs+=("lib:${cmp}")
  done 
  _multi_parts ":" pkgs
}

# `exe:` pkgspecs
_cabal_pkgspecs_exe () {
  local -a pkgs
  local cmp name
  for cmp in $(_cabal_list_executables); do
    pkgs+=("exe:${cmp}")
  done 
  _multi_parts ":" pkgs
}

# `test:` pkgspecs
_cabal_pkgspecs_test () {
  local -a pkgs
  local cmp name
  for cmp in $(_cabal_list_tests); do
    pkgs+=("test:${cmp}")
  done 
  _multi_parts ":" pkgs
}

# `bench:` pkgspec
_cabal_pkgspecs_bench () {
  local -a pkgs
  local cmp name
  for cmp in $(_cabal_list_benchmarks); do
    pkgs+=("bench:${cmp}")
  done 
  _multi_parts ":" pkgs
}

# find all ghc which are in $PATH
_cabal_find_ghc () {
  local -a ghcs
  for p in $( echo ${PATH} | sed 's/:/\n/g' ); do
    ghcs+=( $(find $p -name "ghc*" 2&>/dev/null | grep -s -P 'ghc(-\d+\.\d+\.\d+)?$' 2&>/dev/null) )
  done
  _describe -t ghcs 'ghc' ghcs
}

_cabal_available_packages_cache () {
  local packages_tmp_file;
  zstyle -s ":completion:${MAIN_CONTEXT}:options:" packages-tmp-file packages_tmp_file;
  echo " /creating list of avaialble packages: it might take a while .../"
  cabal list --simple-output | awk '{print $1}' | uniq > ${packages_tmp_file}
}

_cabal_available_packages () {
  # TODO: we don't take into account --package-db
  local file="/tmp/zsh-haskell-cabal-packages"
  local -A packages
  local packages_tmp_file
  zstyle -s ":completion:${MAIN_CONTEXT}:options:" packages-tmp-file packages_tmp_file
  if [[ -e ${packages_tmp_file} ]]
  then
  else
    _cabal_available_packages_cache;
  fi
  packages=${(f)"$(<${packages_tmp_file})"}
  _arguments "*:package:(${packages})"
}

